{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "es2015"],
		"jsx": "react",
		"moduleResolution": "node",
		"module": "esnext",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"baseUrl": "./src",
		"paths": {
			"*": ["*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
