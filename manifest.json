{
	"manifest_version": 3,
	"name": "Air Quality Monitor",
	"version": "1.0",
	"description": "Monitor air quality and receive alerts",
	"permissions": ["notifications", "alarms", "storage", "background"],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "index.html",
		"default_icon": {
			"16": "icon16.png",
			"48": "icon48.png",
			"128": "icon128.png"
		}
	},
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	}
}
